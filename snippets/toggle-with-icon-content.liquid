<toggle-tab class="toggle {% if select_icon == "none" and custom_icon == blank %} toggle--no-icon {% endif %}" {{ shopify_attributes }}>
  <span class="toggle__title text-size--smaller" tabindex="0" aria-expanded="false" aria-controls="toggle-{{ id }}"> 
    {%- if custom_icon != blank -%}
      <span class="icon-pack" aria-hidden="true" aria-label="{{ custom_icon.alt }}" role="img">
        <img src="{{ custom_icon | image_url: width: 76, height: 76, crop: 'center' }}" alt="{{ custom_icon.alt }}" width="76" height="76" loading="lazy"  />
      </span>
    {%- elsif select_icon != "none" -%}
      <span class="icon-pack" aria-hidden="true" aria-label="{{ select_icon }}" role="img">
        {%- render 'icons-pack', icon: select_icon -%}
      </span>
    {% else %}
      <span class="custom-svg svg-icon" aria-hidden="true" aria-label="{{ select_icon }}" role="img">
        {{svg_icon}}
      </span>
    {%- endif -%}
    <span>{{ title | escape }}</span>
  </span>
  <div id="toggle-{{ id }}" class="toggle__content rte">
    {{ content }}
    {%- if image -%}
      {%- assign sizes = 'sizes="(max-width: 599px) calc(100vw - 90px), (max-width: 1023px) calc(50vw - 80px), 25vw"' -%}
      {%- render 'lazy-image', image: image, sizes: sizes -%}
    {%- endif -%}
  </div>
</toggle-tab>